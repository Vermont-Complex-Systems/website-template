{
	"name": "vcsi-starter",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"workspaces": [
		"packages/*",
		"templates/*",
		"sites/*"
	],
	"scripts": {
		"dev": "npm run package:watch --workspace=@the-vcsi/scrolly-kit & npm run dev --workspace=full",
		"dev:template": "npm run dev --workspace=full",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6"
	}
}
